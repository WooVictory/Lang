<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FCFCFC"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 후기"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#111111"
            />
        <View
            android:id="@+id/tab_line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BCBCBC"
            android:layout_alignBottom="@+id/toolbar"
            />
        <ImageButton
            android:id="@+id/review_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/review_write"
            android:layout_alignRight="@id/toolbar"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="#FCFCFC"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_top"
        android:id="@+id/review_rating_avg_part">
        <TextView
            android:id="@+id/review_rating_avg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평균 평점"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginTop="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="22dp"
            android:textColor="#111111"
            />
        <RatingBar
            android:id="@+id/review_rating_avg"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/review_rating_avg_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.5"
            />
        <TextView
            android:id="@+id/review_rating_avg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/review_rating_avg"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:textColor="#111111"
            android:text="4.5"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view_review"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_below="@+id/review_rating_avg_part"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FCFCFC"
            android:layout_centerHorizontal="true"
            />
        <View
            android:id="@+id/toolbar_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BCBCBC"
            />
        <ImageButton
            android:id="@+id/apply_completebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/meetinginformation_apply"
            />
        <RatingBar
            android:id="@+id/review_rating_avg_toolbar"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            />
        <TextView
            android:id="@+id/review_rating_avg_num_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/review_rating_avg_toolbar"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:layout_alignTop="@+id/review_rating_avg_toolbar"
            android:textColor="#111111"
            android:text="4.5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임후기"
            android:textColor="#111111"
            android:layout_below="@+id/review_rating_avg_toolbar"
            android:layout_alignStart="@+id/review_rating_avg_toolbar"
            android:layout_marginTop="6dp"
            />

    </RelativeLayout>

</RelativeLayout>