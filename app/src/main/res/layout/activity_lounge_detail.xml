<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#EFEFEF">

    <RelativeLayout
        android:id="@+id/toolbar_box"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar_box"
        android:background="#bcbcbc"/>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/view_1"
        android:background="#EFEFEF"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lounge_detail_type_comment_box"
        android:layout_below="@+id/view_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <ImageView
                    android:id="@+id/lounge_detail_writer_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/pic1"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/lounge_detail_writer_pic"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lounge_detail_writer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ji Hyeon Jung"
                        android:textColor="#111111"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lounge_detail_writer_lang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="한국어"
                            android:textColor="#707070"
                            android:textSize="10dp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/lounge_arrow"
                            android:textColor="#707070" />

                        <TextView
                            android:id="@+id/lounge_detail_writer_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textColor="#707070"
                            android:textSize="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/lounge_detail_uploded_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="18dp"
                    android:text="10분전"
                    android:textColor="#111111"
                    android:textSize="10dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/lounge_detail_expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. testing expandable textview. " />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <HorizontalScrollView
                android:id="@+id/horiozontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lounge_update_box">

                <LinearLayout
                    android:id="@+id/lounge_update_image_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/detail_img10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/lounge_detail_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/lounge_like_on" />

                <TextView
                    android:id="@+id/lounge_detail_num_of_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/lounge_detail_like"
                    android:text="3" />

                <ImageView
                    android:id="@+id/lounge_detail_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/lounge_detail_num_of_like"
                    android:src="@drawable/lounge_reply" />

                <TextView
                    android:id="@+id/lounge_detail_num_of_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/lounge_detail_comment"
                    android:text="6" />

                <ImageView
                    android:id="@+id/lounge_detail_more"
                    android:layout_width="13dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/lounge_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#bcbcbc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="#EFEFEF" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/lounge_detail_comment_text_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="댓글 ("
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

                <TextView
                    android:id="@+id/lounge_detail_num_of_comment_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lounge_detail_comment_text_d"
                    android:text="5"
                    android:textSize="16dp"
                    android:textColor="#111111"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lounge_detail_num_of_comment_s"
                    android:text=")"
                    android:textSize="16dp"
                    android:textColor="#111111"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lounge_detail_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/lounge_detail_type_comment_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/lounge_detail_type_comment"
            android:hint="댓글을 입력해주세요."
            android:background="@null"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/lounge_detail_update_comment"
            android:text="댓글달기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#680FD6"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lounge_detail_type_comment"
            android:layout_marginRight="3dp"/>
        <!--글씨크기 받기-->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#bcbcbc"
        android:layout_above="@+id/lounge_detail_type_comment_box"/>

</RelativeLayout>