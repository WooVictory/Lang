<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/click_item">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="328dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:src="@drawable/image_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title"
                android:textStyle="bold"
                android:text="홍대 Languae"
                android:textColor="#111111"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:layout_toLeftOf="@+id/detail_group_share_btn"
                />

          <ImageButton
                android:id="@+id/detail_group_share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_share"
                android:layout_toLeftOf="@+id/detail_group_like_btn"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <ImageButton
                android:id="@+id/detail_group_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/home_heart_btn"
                android:layout_alignParentEnd="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"/>


        </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/detail_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="#707070"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/detail_host"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:text="주최자:  "
            android:textColor="#707070"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/detail_host_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#707070"
            android:textSize="14dp"
            tools:text = "Lee"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="#707070"
            android:textSize="14dp"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_purpose"
            android:textColor="#707070"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:text="언어교류"/>


    </LinearLayout>

    </LinearLayout>


</LinearLayout>