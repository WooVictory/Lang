<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="#ffffff">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_default"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_alignTop="@+id/review_profile_img"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/review_profile_img"
        android:textColor="#111111"
        />
    <RatingBar
        android:id="@+id/review_rating"
        style="@style/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_name"
        android:layout_alignStart="@+id/review_name"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        />
    <TextView
        android:id="@+id/review_rating_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_name"
        android:layout_toRightOf="@+id/review_rating"
        android:layout_marginLeft="16dp"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="#111111"
        />
    <TextView
        android:id="@+id/review_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignStart="@+id/review_name"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/review_rating"
        android:layout_marginEnd="16dp"
        android:textColor="#111111"
        />
    <View
        android:id="@+id/gapline"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#BCBCBC"
        android:layout_below="@+id/review_context"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/review_name"
        />

</RelativeLayout>