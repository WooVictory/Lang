<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical"
    android:background="#ffffff">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/participant_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_default"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#111111"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/participant_profile_img"
        />
    <ImageView
        android:id="@+id/meetinginfo_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/meetinginformation_organizer"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/participant_name"
        android:layout_marginLeft="16dp"
        android:visibility="visible"
        />
    <View
        android:id="@+id/gapline"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#BCBCBC"
        android:layout_below="@+id/participant_name"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@+id/participant_name"
        />

</RelativeLayout>
