<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FCFCFC"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 신청"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#111111"
            />
        <View
            android:id="@+id/tab_line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BCBCBC"
            android:layout_alignBottom="@+id/toolbar"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">
        <TextView
            android:id="@+id/stage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/2단계"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:textColor="#AD71F8"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/stage1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 이용규칙을\n확인해주세요."
            android:textSize="20sp"
            android:textColor="#111111"
            android:layout_below="@+id/stage1"
            android:layout_alignStart="@+id/stage1"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/gap1"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#BCBCBC"
            android:layout_below="@+id/stage1_title"
            android:layout_marginTop="16dp"
            />
        <ImageView
            android:id="@+id/apply_rule_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apply_rule_first"
            android:layout_below="@+id/gap1"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/stage1"
            />
        <TextView
            android:id="@+id/stage1_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여 신청 모임 불참 시 불이익을 받을 수 있습니다."
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_below="@+id/gap1"
            android:layout_toEndOf="@+id/apply_rule_1st"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            />
        <View
            android:id="@+id/gap2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#BCBCBC"
            android:layout_below="@+id/stage1_detail1"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/stage1_detail1"
            />
        <ImageView
            android:id="@+id/apply_rule_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apply_rule_second"
            android:layout_below="@+id/gap2"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/stage1"
            />
        <TextView
            android:id="@+id/stage1_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인 정보 허위 기재 시 불이익을 받을 수 있습니다."
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_below="@+id/gap2"
            android:layout_toEndOf="@+id/apply_rule_1st"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            />
        <View
            android:id="@+id/gap3"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#BCBCBC"
            android:layout_below="@+id/stage1_detail2"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/stage1_detail2"
            />
        <ImageView
            android:id="@+id/apply_rule_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apply_rule_third"
            android:layout_below="@+id/gap3"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/stage1"
            />
        <TextView
            android:id="@+id/stage1_detail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고 누적 시 어플 이용에 불이익이 있을 수 있습니다."
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_below="@+id/gap3"
            android:layout_toEndOf="@+id/apply_rule_2nd"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            />
        <View
            android:id="@+id/gap4"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#BCBCBC"
            android:layout_below="@+id/stage1_detail3"
            android:layout_marginTop="19dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FCFCFC"
            android:layout_centerHorizontal="true"
            />
        <View
            android:id="@+id/toolbar_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BCBCBC"
            />
        <ImageButton
            android:id="@+id/apply_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/apply_check"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위 모임 규칙에 동의하시나요?"
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_toEndOf="@+id/apply_check_btn"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/apply_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/apply_next_off" />
    </RelativeLayout>


</RelativeLayout>
